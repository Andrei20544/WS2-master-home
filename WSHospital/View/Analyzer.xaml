<Window x:Class="WSHospital.View.Analyzer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSHospital.View"
        mc:Ignorable="d"
        Title="Analyzer" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="319*"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
        </Grid.RowDefinitions>

        <DataGrid AutoGenerateColumns="False" Name="grid" DataContext="{Binding list}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название сервиса" Binding="{Binding Path=name}" Width="200" />
                <DataGridHyperlinkColumn Header="Статус" Binding="{Binding Path=status}" Width="120" />
                <DataGridTextColumn Header="Цена" Binding="{Binding Path=cost}" Width="150" />
                <DataGridTextColumn Header="отправка" Width="150" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
